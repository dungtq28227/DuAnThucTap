@model AppView.PhanTrang.PhanTrangQuyDoiDiem

@{
    ViewData["Title"] = "GetAllQuyDoiDiem";
    Layout = "~/Views/Shared/_LayoutForAdmin.cshtml";
    int stt = 1;
}

<h3>Quản Lý Quy Đổi Điểm</h3>

<button class="btn btn-dark">
    <strong style="color:white">@Html.ActionLink("Thêm Quy Đổi Điểm", "Create")</strong>
</button>
<table class="table">
    <thead>
        <tr>
            <th>
                STT
            </th>
          
            <th>
                Tỉ Lệ Tích Điểm
            </th>
            <th>
               Tỷ Lệ Tiêu Điểm
            </th>
            <th>
                Trạng Thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.listqdd) {
        <tr>
            <td>
                <strong style="color:black">@stt</strong>
            </td>
            
            <td>
                <strong style="color:green">@item.TiLeTichDiem</strong>
            </td>
            <td>
                    <strong style="color:green">@item.TiLeTieuDiem</strong>
            </td>
            <td>
                @if(item.TrangThai==0){
                        <strong style="color:red">Hết</strong>
                }
                else{
                        <strong style="color:green">Còn</strong>
                }
            </td>
            <td>
                    <button class="btn btn-success">
                        @Html.ActionLink("Sửa", "Updates", new { id = item.ID }, new { @style = "color:white;" })
                    </button>
                    <button class="btn btn-primary">
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }, new { @style = "color:white;" })
                    </button>
                    <button class="btn btn-danger">
                        @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, new { @style = "color:white;" })
                    </button>
            </td>
            @{
                stt++;
            }
        </tr>
}
    </tbody>
</table>
<div class="col-12">
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item disabled"><a class="page-link" href="#">Previous</span></a></li>
            @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
            {
                <li class="page-item"><a class="page-link" href="/QuyDoiDiem/GetAllQuyDoiDiem?ProductPage=@i">@i</a></li>

            }

            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>
</div>
