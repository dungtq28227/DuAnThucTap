@model AppData.ViewModels.SanPham.LoaiSPRequest

@{
    Layout = "~/Views/Shared/_LayoutForAdmin.cshtml";
    ViewData["Title"] = "Edit";
    AppData.Models.AssignmentDBContext dBContext = new AppData.Models.AssignmentDBContext();
}

<h1>Sửa Loại SP</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tên Loại SP</label>
                <input asp-for="Ten" class="form-control" />
                <span asp-validation-for="Ten" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Tên Loại SP Cha</label>
                <select class="form-control" name="IDLoaiSPCha">
                    if (loaisp.IDLoaiSPCha == null)
                    {
                    <option value="">Chọn Sản Phẩm Cha</option>
                    }
                    @foreach (var cha in dBContext.LoaiSPs.ToList())
                    {
                        <option value="@cha.ID">@cha.Ten</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Trạng Thái</label>
                <input asp-for="TrangThai" class="form-control" />
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sửa loại SP" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Show">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
